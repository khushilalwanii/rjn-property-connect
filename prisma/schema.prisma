generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(uuid())
  propertyCode  String   @unique
  title       String
  price       String
  location    String
  purpose     String   @default("SELL")
  identity    String
  verified    Boolean  @default(false)
  description String
  images      String[]

  contactName  String
  contactPhone String

  userId      String   
  user        User     @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())

  properties Property[]
}
